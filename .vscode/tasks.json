{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "./build.sh",
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          { "regexp": "^(.*):(\\d+):(\\d+):\\s+(?:fatal\\s+)?(error|warning):\\s+(.*)$", "file": 1, "line": 2, "column": 3, "severity": 4, "message": 5 },
          { "regexp": "^(.*):(\\d+):\\s+(?:fatal\\s+)?(error|warning):\\s+(.*)$", "file": 1, "line": 2, "severity": 3, "message": 4 }
        ]
      }
    },
    {
      "label": "Clean & Build Debug",
      "type": "shell",
      "command": "./build.sh -c",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          { "regexp": "^(.*):(\\d+):(\\d+):\\s+(?:fatal\\s+)?(error|warning):\\s+(.*)$", "file": 1, "line": 2, "column": 3, "severity": 4, "message": 5 },
          { "regexp": "^(.*):(\\d+):\\s+(?:fatal\\s+)?(error|warning):\\s+(.*)$", "file": 1, "line": 2, "severity": 3, "message": 4 }
        ]
      }
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "./build.sh -r",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          { "regexp": "^(.*):(\\d+):(\\d+):\\s+(?:fatal\\s+)?(error|warning):\\s+(.*)$", "file": 1, "line": 2, "column": 3, "severity": 4, "message": 5 },
          { "regexp": "^(.*):(\\d+):\\s+(?:fatal\\s+)?(error|warning):\\s+(.*)$", "file": 1, "line": 2, "severity": 3, "message": 4 }
        ]
      }
    },
    {
      "label": "Run All Tests (background)",
      "type": "shell",
      "command": "./build.sh -t",
      "options": { "cwd": "${workspaceFolder}" }
    }
  ]
}